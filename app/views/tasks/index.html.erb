<div class="container">
<h1>My tasks</h1>

<ul class="list-group">
  <% @tasks.each do |task| %>
  <li class="list-group-item">
    <div class="form-check">
    <input class="form-check-input" type="checkbox" value="" <%= task.completed && "checked" %> id="flexCheckDefault">
    <label class="form-check-label" for="flexCheckDefault">
    <%= link_to task.name, task_path(task) %>
    <%= link_to "🗑️",
    task_path(task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
</div>
  </li>
  <% end %>
</ul>

<%= link_to "+Add new tasks", new_task_path%>

</div>
